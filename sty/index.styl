
.container

  margin auto
  padding 30px
  border: 2px solid c.grey1
  min-height 100%
  max-width 1600px
  height 6000px

  > .logo
    color: c.yellow1
    width 348px
    text-align center
    margin auto
    padding 0 0 60px 0
    > .daffodil
      font f_h2
    > .digital
      font f_h1
      line-height 64px

  > .menu
    text-align center
    > .item
      display inline-block
      cursor pointer
      font f_h3
      text-transform uppercase
      color: c.grey3
      padding 20px 40px
      background-color: c.white1
      margin 0 -3px
      text-decoration none
      transition color 0.1s linear
      &:hover
        color: c.yellow1
      &.active
        color: c.yellow1
        text-decoration underline
    > .line
      width 100%
      height 2px
      background-color: c.grey1
      margin -38px 0 68px 0

  > .banner
    position relative
    height 600px
    overflow hidden
    > .inner
      overflow hidden
      height 900px
      margin -150px 0 0 0
      background-position 50% 50%
      background-size cover
      background-repeat no-repeat
      background-image url('/img/banner.jpg')
      > .tags
        // 510x604
        width 250px
        height 302px
        background-image url('/img/tags.png')
        background-size contain
        position absolute
        top 40%
        left 50%
        margin -125px 0 0 -151px

