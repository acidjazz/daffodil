
.container

  margin auto
  padding 30px
  border: 2px solid c.grey1
  min-height 100%
  max-width 1400px
  height 3000px

  > .logo
    color: c.yellow1
    width 348px
    text-align center
    margin auto
    padding 0 0 60px 0
    > .daffodil
      font f_h2
    > .digital
      font f_h1
      line-height 64px

  > .menu
    text-align center
    > .item
      display inline-block
      cursor pointer
      font f_h3
      text-transform uppercase
      color: c.grey3
      padding 20px 40px
      background-color: c.white1
      margin 0 -3px
      text-decoration none
      transition color 0.1s linear
      animation cellOutY 0.2s 0s ease-in both
      &:nth-child(1)
      &:nth-child(5)
        animation-delay 0.2s
      &:nth-child(2)
      &:nth-child(4)
        animation-delay 0.1s
      &:hover
        color: c.yellow1
      &.active
        color: c.yellow1
        text-decoration underline
    > .line
      width 100%
      height 2px
      background-color: c.grey1
      margin -38px 0 68px 0

  > .banner
    position relative
    height 600px
    overflow hidden
    > .inner
      overflow hidden
      height 900px
      margin -150px 0 0 0
      background-position 50% 50%
      background-size cover
      background-repeat no-repeat
      background-image url('/img/banner.jpg')
      > .tags
        // 510x604
        width 250px
        height 302px
        background-image url('/img/tags.png')
        background-size contain
        position absolute
        top 50%
        left 50%
        margin -125px 0 0 -151px
        //animation tagsIn 0.2s linear 0s 
  > .story
    margin 30px 0
    > .section
      width 50%
      > .inner
        padding 20px
    > .section.left
      animation cellInY 0.2s 0.4s ease-in both
      float left
      height 200px
      > .inner
        height inherit
        > svg
          max-height 150px
    > .section.right
      float right
      animation cellInY 0.2s 0.5s ease-in both
      > .inner
        border-left: 2px solid c.grey1
        color: c.grey2
        line-height 40px
        > .title
          text-transform uppercase

  > .submenu
    animation cellOutY 0.2s 0.6s ease-in both
    > .item
      width 33.333%
      float left
      text-decoration none
      &:nth-child(1) > .inner
        margin-left 0px
      &:nth-child(3) > .inner
        margin-right 0px
      &:hover > .inner > .copy
        color: c.yellow1
        background-color: c.white1
      > .inner
        background-color: c.yellow1
        margin 20px
        color: c.white1
        text-align center
        padding 20px
        text-transform uppercase
        font f_copy2
        > .copy
          padding 40px 0
          border: 1px solid c.white1
          transition background-color 0.1s linear, color 0.1s linear 0.1s
      
