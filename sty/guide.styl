
f_copy = 16px gotham book
f_copyi = 16px gotham bookitalic
f_copyb = 16px gotham bold
f_copy2 = 24px gotham book
f_copy2b = 24px gotham bold

f_h1 = 128px luxus-brut regular
f_h2 = 64px atc-rosemary regular
f_h3 = 24px atc-rosemary regular
f_h4 = 32px gotham book 
f_h5 = 32px gotham bold 


// colors
c = {}
for key, value in data.colors
  c[key] = convert(value)

.guide
  padding 50px 0 0 0 
  background-color: c.white1
  > .title
    font f_h3
    padding 0 0 0 50px
    text-transform uppercase

  > .sections
    padding 20px
    > .section
      width 33%
      float left

      > .color
        padding 10px 20px
        margin 5px
        for name, color in data.colors
          &.color_{name}
            background-color: convert(color)
            if dark(convert(color))
              border: 1px solid c.white1
              color: c.white1
            else
              border: 1px solid c.black1
              color: c.black1
 
      > .font
        padding 10px 20px
        margin 5px
        background-color: c.white1
        overflow-x scroll
        line-height 50px !important
        &.font_f_copy
          font f_copy
        &.font_f_copyi
          font f_copyi
        &.font_f_copyb
          font f_copyb
        &.font_f_copy2
          font f_copy2
        &.font_f_copy2b
          font f_copy2b
        &.font_f_h1
          font f_h1
        &.font_f_h2
          font f_h2
        &.font_f_h3
          font f_h3
        &.font_f_h4
          font f_h4
        &.font_f_h5
          font f_h5

