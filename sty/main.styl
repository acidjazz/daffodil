
vendor-prefixes ?= webkit moz o ms official

c = {}
for key, value in data.colors
  c[key] = convert(value)

// needed
@import guide
@import vendor
@import mixins
@import fonts
@import '/inc/*'

.clear
  clearfix()

body
  margin 0
  padding 30px 
  background-color: c.white1
  color: c.black1
  font f_copy

  > .container
    margin auto
    padding 30px
    border: 2px solid c.grey1
    min-height 100%
    max-width 1400px

    > .main
      min-height 600px

      > .section
        &.on
          display block
        &.off
          display none
