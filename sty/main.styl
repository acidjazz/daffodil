
vendor-prefixes ?= webkit moz o ms official

c = {}
for key, value in data.colors
  c[key] = convert(value)

// needed
@import guide
@import vendor
@import mixins
@import fonts
@import '/inc/*'

.clear
  clearfix()

body
  margin 0
  padding 30px 
  background-color: c.white1
  color: c.black1
  font f_copy

  > .container
    margin auto
    padding 30px
    border: 2px solid c.grey1
    min-height 100%
    max-width 1400px

    > .main
      min-height 600px

      > .section
        &.on
          display block
        &.off
          display none
// pages
@import home
@import services
@import portfolio


.loader
  position fixed
  top 0
  left 0
  width 100%
  height 20px
  background-color: c.grey1
  &.off
    transform translate(0, -20px)
    transition transform 0.2s linear 0.5s
  &.on
    transform translate(0, 0px)
    transition transform 0.5s linear 0s
  > .inner
    position relative
    width 100%
    height 100%
    > .gradient
      position absolute
      background: linear-gradient(90deg, rgba(c.grey1, 1), rgba(c.white1, 0.5))
      width 100%
      height 100%
      animation loader-gradient 2s 0s ease-in-out infinite
    > .full
      position absolute
      width 0%
      height 100%
      background-color: c.yellow2
      transition width 0.2s linear

@keyframes loader-gradient
  from
    left -100%
  to
    left 100%

