desktop()
  max-width 1200px
  margin auto

clearfix()
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie


fontfaces(dir, fonts, exts)

  for font in fonts
    @font-face
      font-family dir font
      for ext in exts
        if ext == 'eot'
          src url(fnt/dir/font.eot) format('embedded-opentype')
        if ext == 'otf'
          src url(fnt/dir/font.otf) format('opentype')
        if ext == 'ttf'
          src url(fnt/dir/font.ttf) format('truetype')
        if ext == 'svg'
          src url(fnt/dir/font.svg) format('svg')
        if ext == 'woff'
          src url(fnt/dir/font.woff) format('woff')
      font-weight normal
      font-style normal

social_icon()
  width 40px
  height 40px
  padding 10px
  border-radius 5px
  transition background-color 0.1s linear 0.05s
  &:hover
    background-color: c.grey2
    > svg
      > path, > g, > g > path
        fill: c.white1
  > svg
    width inherit
    height inherit
    > path, > g, > g > path
      fill: c.grey2
      transition fill 0.1s linear 0s

